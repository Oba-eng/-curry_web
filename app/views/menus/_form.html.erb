<%= form_with(model: menu, local: true) do |form| %>
  <% if menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
      <ul>
        <% menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

<div class="form-group">
  <%= form.label :menu_image %>
  <%= form.file_field :menu_image, class: 'form-control mb-3 js-file-select-preview', accept: 'image/*', data: { target: '#menu-image-preview' } %>
  <%= form.hidden_field :menu_image_cache %>
</div>

<div class='mt-3 mb-3'>
  <% if menu.menu_image.present? %>
    <%= image_tag menu.menu_image.url, id: 'menu-image-preview', size: '300x200' %>
  <% else %>
    <!-- 画像が存在しない場合の処理を追加 -->
    <p>No Image Available</p>
  <% end %>
</div>

  <div class="form-group">
    <%= form.label :material %>
    <%= form.text_field :material, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :make %>
    <%= form.text_area :make, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :point %>
    <%= form.text_area :point, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
