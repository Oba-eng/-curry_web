<%= form_with model: menu do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :material %>
    <%= f.text_area :material, class: 'form-control', rows: 8 %>
  </div>
  <div class="mb-3">
    <%= f.label :make %>
    <%= f.text_area :make, class: 'form-control', rows: 8 %>
  </div>
  <div class="mb-3">
    <%= f.label :point %>
    <%= f.text_area :point, class: 'form-control', rows: 8 %>
  </div>



  <% if menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
      <ul>
        <% menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :menu_image %>
    <%= f.file_field :menu_image, class: 'form-control js-file-select-preview mb-3', accept: 'image/*', data: { target: '#preview-target' } %>
    <%= image_tag f.object.decorate.thumbnail, id: 'preview-target', class: 'w-50 border' %>
  </div>

  <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>
