<%= javascript_include_tag 'menus' %>
<%= javascript_include_tag 'form' %>
<%= javascript_include_tag 'make' %>

<%= form_with(model: @menu, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :name, "メニュー名" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-row d-flex">
    <div class="flex-grow-1">
      <div class="menu-image-prev" onclick="document.getElementById('menu_image_field').click();">
        <% if @menu.menu_image.present? %>
          <%= image_tag @menu.menu_image.thumb.url, alt: "menu-image", id: "img_prev", class: "img-thumbnail", size: "300x105" %>
        <% else %>
          <%= image_tag "menu-default-image.png", alt: "menu-image", id: :img_prev, class: "img-thumbnail", size: "300x105" %>
        <% end %>
        <%= f.file_field :menu_image, id: "menu_image_field", class: "hidden", accept: "image/*", onchange: "previewImage(this);", style: "display:none;" %>
      </div>
    </div>
    <div class="flex-grow-1">
      <div class="card-body">
        <div id="material_quantity_form_area">
            <!-- 初期のフォームをラップする div -->
            <div class="form-group">
              <input type="text" name="menu[material][]" id="a1" placeholder="材料">
              <input type="text" name="menu[quantity][]" id="b1" placeholder="分量">
              <button type="button" id="1" onclick="deleteForms(this.id)">×</button>
            </div>
        </div>
        <button type="button" class="btn btn-secondary mt-2" onclick="addMaterialQuantityForms()">材料と分量を追加</button>
      </div>
    </div>
  </div>

  <div class="form-row d-flex mt-3">
    <div class="flex-grow-1">
      <div class="mb-3">
        <%= f.label :genre, "カレーのジャンル" %>
        <%= f.select :genre, [["バターチキンカレー", "バターチキンカレー"], ["ドライカレー", "ドライカレー"], ["グリーンカレー", "グリーンカレー"], ["スープカレー", "スープカレー"], ["ビーフカレー", "ビーフカレー"], ["ポークカレー", "ポークカレー"], ["カツカレー", "カツカレー"], ["シーフードカレー", "シーフードカレー"], ["野菜カレー", "野菜カレー"], ["その他", "その他"]], include_blank: "選択して下さい" %>
      </div>
    </div>
    <div class="flex-grow-1">
      <div class="mb-3">
        <%= f.label :hot, "辛さレベル" %>
        <%= f.select :hot, [["1:甘口", "1:甘口"], ["2:甘口〜中辛", "2:甘口〜中辛"], ["3:中辛", "3:中辛"], ["4:中辛〜辛口", "4:中辛〜辛口"], ["5:辛口", "5:辛口"]], include_blank: "選択して下さい" %>
      </div>
    </div>
  </div>

  <div class="mb-3 mx-3">
    作り方
    <div id="make_form_area">
      <!-- 初期の作り方ステップのフィールド -->
      <div class="form-group">
        <label for="make_step_1">ステップ1</label>
        <textarea name="menu[make][]" id="make_step_1" class="form-control" rows="8" placeholder="作り方のステップ"></textarea>
        <button type="button" id="1" onclick="deleteMakeStep(this.id)">×</button>
      </div>
    </div>
    <button type="button" class="btn btn-secondary mt-2" onclick="addMakeStep()">作り方を追加</button>
  </div>

  <div class="mb-3 mx-3">
    <%= f.label :point, "ポイント" %>
    <%= f.text_area :point, class: 'form-control', rows: 8 %>
  </div>

  <% if @menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
      <ul>
        <% @menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.submit '確認画面へ', class: 'btn btn-primary' %>
<% end %>
