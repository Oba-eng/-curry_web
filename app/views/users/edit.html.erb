<div class="container d-flex justify-content-center align-items-center" style="height: 73vh;">
  <div class="card"  style="width: 400px;">
    <div class="card-header">
      編集
    </div>
    <div class="card-body">
      <%= form_with model: @user do |f| %>
        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div>
          <%= f.submit '更新', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
